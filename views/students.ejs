<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <link rel="stylesheet" href="/styleSheet.css">
</head>

<body>
    <!-- EJS BODY -->
    <h1>Students</h1>
    <a href="/students/add">Add Student</a>
    <br>
    <a href="/home.html">Home</a>

    <table>
        <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Action</th>
        </tr>
        <% students.forEach((student)=>
            { %>
            <tr>
                <td>
                    <%= student.sid %>
                </td>
                <td>
                    <%= student.name %>
                </td>
                <td>
                    <%= student.age %>
                </td>
                <td>
                    <a href="/student/update/<%=student.sid%>">Update</a>
                </td>
            </tr>
        <% }) %>
    </table>
</body>

</html>